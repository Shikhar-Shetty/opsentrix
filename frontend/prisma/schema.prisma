generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agent {
  id            String   @id @unique
  name          String
  email         String
  token         String
  status        String   @default("offline")
  lastHeartbeat DateTime @default(now())
  processes     Int      @default(0)
  CPU           Float    @default(0.0)
  memory        Float    @default(0.0)
  disk          Float    @default(0.0)
  userId        String
  summary       String
  message       String?
  location      String?
  dailyinsights String?
  insightDate   DateTime?
  process        ProcessMetrics[]
  createdAt     DateTime @default(now())
}

model ProcessMetrics {
  id          String   @id @default(uuid())
  agent       Agent?   @relation(fields: [agentId], references: [id])
  agentId     String?
  processName String
  pid         Int
  cpuUsage    Float
  memoryUsage Float
  status      String     
  aiFlag      String     @default("unknown") 
  aiReason    String?
  createdAt   DateTime   @default(now())
}
